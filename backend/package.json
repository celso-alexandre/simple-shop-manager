{
  "name": "backend",
  "version": "0.0.1",
  "description": "Manage a small shop",
  "author": "@celso-alexandre",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "postinstall": "pnpm prisma:generate",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:format": "pnpm prisma format",
    "prisma:deploy": "pnpm prisma migrate deploy && pnpm prisma:seed",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:proto": "PRISMA_BINARY_TARGET=\\\"native\\\" prisma db push",
    "prisma:migrate": "PRISMA_BINARY_TARGET=\\\"native\\\" prisma migrate dev && pnpm prisma-uml prisma/schema.prisma --output jpg --file schema.jpg",
    "prisma:migrate:create": "pnpm prisma migrate dev --create-only",
    "generate": "pnpm prisma:generate"
  },
  "dependencies": {
    "@nestjs/apollo": "^12.2.2",
    "@nestjs/common": "^10.4.13",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.13",
    "@nestjs/graphql": "^12.2.2",
    "@nestjs/platform-express": "^10.4.13",
    "@prisma/client": "^6.0.1",
    "bson": "^6.10.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.9.0",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.13",
    "@types/express": "^5.0.0",
    "@types/jest": "29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "22.10.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "29.7.0",
    "nest": "^0.1.6",
    "prettier": "^3.4.2",
    "prisma": "^6.0.1",
    "prisma-nestjs-graphql": "^20.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "yarn-upgrade-all": "^0.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}